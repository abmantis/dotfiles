# Swaybar Command
    #set $swaybar_cmd "cd /home/acosta/external/sway_repos/Waybar && build/waybar"
    set $swaybar_cmd "/home/acosta/external/sway_repos/Waybar/build/waybar"

# Screen lock and off idle time
    set $screenidletimelock 180
    set $screenidletimeoff 240

# Application launcher
    #set $menu bash -c "source /etc/profile.d/apps-bin-path.sh && rofi -combi-modi window,drun -show-icons -show combi -modi combi"
    set $menu wofi

# Background
    set $background /home/acosta/Pictures/Wallpapers/i-see-stars.jpg

# Theme
    set $gtk_theme 'Yaru'

# Touchpad name
    set $touchpad_name "1739:0:Synaptics_TM3276-022"

# Nipple mouse config
input 2:10:TPPS/2_IBM_TrackPoint {
        accel_profile adaptive
        pointer_accel 1
    }

# Autostart apps
    exec gnome-terminal
    exec teams
    exec keepass2
    exec sleep 5 && swaymsg '[instance="keepass2"] focus, move scratchpad'
