# Swaybar Command
    set $swaybar_cmd waybar

# Screen lock and off idle time
    set $screenidletimelock 600
    set $screenidletimeoff 660

# Background
    set $background ~/Pictures/914205-wallpaper.jpg

# Theme
    set $gtk_theme 'Yaru-dark'

# Application launcher
    set $menu bash -c "source /etc/profile.d/snapd.sh && rofi -combi-modi window,drun -show-icons -show combi -modi combi"

# Touchpad name
    set $touchpad_name "1739:31251:DLL07BE:01_06CB:7A13_Touchpad"    

# Autostart apps
    exec redshift
    exec dropbox
    exec solaar
    exec ~/Scripts/delayed_autostart_list.sh
    exec pulseeffects --gapplication-service
    exec sleep 5 && google-chrome-stable --password-store=gnome --new-window https://duo.google.com 
